{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext", 
    "moduleResolution": "Node",
    "allowJs": true, 
    "checkJs": true,
    "rootDir": "src",
    "outDir": "./dist", 
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}