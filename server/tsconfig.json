{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES6",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src",
    "outDir": "./build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/types.ts"
  ],
  "ts-node": {
    "esm": true
  }
}